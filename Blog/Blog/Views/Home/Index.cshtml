@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>TinyMCE Image Upload Example</title>
    <script src="https://cdn.tiny.cloud/1/cx5w3vy6l6bg0senjow539pjj585n4wqopo9s4r3viuyx88c/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'image',
            toolbar: 'image',
            automatic_uploads: true,
            images_upload_url: '/Home/UploadImage',
            images_upload_base_path: '/uploads',
            file_picker_types: 'image'
        });

        document.addEventListener('DOMContentLoaded', function () {
            // 获取按钮元素
            var button = document.getElementById('getContentButton');

            // 添加点击事件处理程序
            button.addEventListener('click', function () {
                // 获取编辑器内容
                var content = tinymce.get('mytextarea').getContent();
                console.log('Editor content:', content);
            });
        });
    </script>
</head>
<body>
    <h2>TinyMCE Image Upload Example</h2>
    <form method="post">
        <textarea id="mytextarea" name="content"></textarea>
        <br />
        <input type="submit" value="Submit" />
    </form>

    <button id="getContentButton">获取内容</button>
</body>
</html>